<div class="col-md-4">
    <div class="card">
        <div class="card-header">
            <h1 class="card-title text-center">Contacts</h1>
        </div>
        <div class="card-body">
            <form action="/new-contact" method="POST">
                <div class="form-group">
                    <input type="text" name="firstname" placeholder="Firstname" autofocus class="form-control"
                        autocomplete="off">
                </div>
                <div class="form-group">
                    <input type="text" name="lastname" placeholder="Lastname" class="form-control" autocomplete="off">
                </div>
                <div class="form-group">
                    <input type="email" name="email" placeholder="Email" class="form-control" autocomplete="off">
                </div>
                <div class="form-group">
                    <input type="tel" name="phone" placeholder="Phone" class="form-control" autocomplete="off">
                </div>
                <div class="form-group">
                    <input type="submit" value="Register contact" class="btn btn-primary">
                </div>
            </form>
        </div>
    </div>
</div>
<div class="col-md-8">
    <ul class="list-group">
                {{#if contact}}
                {{#each contact}}
                <li class="alert alert-success d-flex justify-content-between align-items-center">
                    {{firstname}}
                    {{lastname}} / 
                    {{email}} / 
                    {{phone}}
                    <a href="/delete/{{@key}}" class="btn btn-danger">Delete</a>
                </li>
                {{/each}}
                {{else}}
                <div class="alert alert-danger">Not contacts</div>
                {{/if}}
            </ul>
</div>